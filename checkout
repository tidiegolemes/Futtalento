    <script>
        document.getElementById('checkoutForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Coleta de dados
            const nomePai = document.getElementById('nome_pai').value;
            const cpfPai = document.getElementById('cpf_pai').value;
            const dominio = document.getElementById('dominio_sugerido').value;
            const nomeAtleta = document.getElementById('nome_atleta').value;
            const redes = document.getElementById('redes_sociais').value;
            const jornada = document.getElementById('jornada').value;
            const video = document.getElementById('video_link').value;

            // Formatação da mensagem para o WhatsApp
            const mensagem = `*NOVA CONTRATAÇÃO - FUTTALENTO*%0A%0A` +
                             `*--- DADOS DO RESPONSÁVEL ---*%0A` +
                             `*Nome:* ${nomePai}%0A` +
                             `*CPF:* ${cpfPai}%0A` +
                             `*Domínio Desejado:* ${dominio}%0A%0A` +
                             `*--- DADOS DO ATLETA ---*%0A` +
                             `*Atleta:* ${nomeAtleta}%0A` +
                             `*Redes:* ${redes}%0A` +
                             `*Vídeo:* ${video}%0A` +
                             `*Jornada:* ${jornada}`;

            const foneAgencia = "554832200260";
            window.location.href = `https://wa.me/${foneAgencia}?text=${mensagem}`;
        });
    </script>

